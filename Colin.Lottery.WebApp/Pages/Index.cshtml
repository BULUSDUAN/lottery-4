@section Scripts{
    <partial name="_LoadingPartial"/>
    <partial name="_NoResultPartial"/>

    <script id="planTemplate" type="text/html">
        <td class="{{cls}}">{{forecastNo}}</td>
        <td class="{{cls}}">{{chaseTimes}}</td>
        <td class="{{cls}}">{{winProbability*100|toFixed}}%</td>
        <td class="{{cls}}">
            {{if keepGuaCnt>1}}
            <strong class="text-danger">是({{keepGuaCnt}})</strong>
            {{else}}
            否
            {{/if}}
        </td>
        <td class="{{cls}}">{{guaScore|toFixed 0}}</td>
        <td class="{{cls}}">{{repetitionScore|toFixed 0}}</td>
        <td class="{{cls}}">{{betChaseScore|toFixed 0}}</td>
        <td class="{{cls}}">{{score|toFixed 0}}</td>
    </script>
    <script id="planExpired" type="text/html">
        <small class="text-danger expired">(已过期)</small>
    </script>
    <script src="/js/index.js"></script>
}